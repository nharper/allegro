<%
  if @section
    path = attendance_rehearsal_path(@rehearsal, section: @section)
  else
    path = attendance_rehearsal_path(@rehearsal)
  end
  p path
%>
<%= form_tag path do |f| %>
<div id="tiles">
  <% @performers.each do |performer| %>
  <div class="tile">
    <%= image_tag photo_performer_path(performer) %>
    <p>
      <span class="ch_num"><%= performer[:chorus_number] %></span>
      <span class="name"><%= performer[:name] %></span>
      <% if performer[:status] != 'Active' %>
      (<%= performer[:status] -%>)
      <% end %>
    </p>
    <%= select 'attendance', performer[:id], ['', 'present', 'absent'] %>
  </div>
  <% end %>
</div>

<div>
  <%= submit_tag %>
	<%# <button type="button" id="save">Save</button> %>
  <button type="button" id="reset">Reset</button>
</div>
<% end # form_tag %>
<script>documentLoaded('<%= @rehearsal.id %>', '<%= @section %>');</script>
