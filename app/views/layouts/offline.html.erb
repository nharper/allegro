<!DOCTYPE html>
<%= content_tag('html', {manifest: @manifest_path}) do %>
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="theme-color" content="#f44336" />
<title>SFGMC Attendance</title>
<%= stylesheet_link_tag    "application", media: "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
<%= content_for :head %>
</head>
<body>
<div id="topbar">
<ul id="breadcrumbs">
  <li><%= link_to 'SFGMC Attendance', '/' %></li>
  <% @breadcrumbs.each do |crumb| %>
    <% if crumb.kind_of?(Array) %>
      <li><%= link_to(*crumb) %></li>
    <% else %>
      <li><%= crumb %></li>
    <% end %>
  <% end if @breadcrumbs %>
</ul>
</div>
<div id="content-wrapper">
<%= yield %>
</div>
</body>
<% end %>
