<style>
@media print {
  @page {
    margin-top: 12mm;
    margin-right: 12mm;
    margin-bottom: 15mm;
    margin-left: 0;
  }

  div#topbar {
    display: none;
  }

  div#content-wrapper {
    margin: 0;
    width: 100%;
  }

  div#print-notes {
    display: none;
  }
}

div#print-notes {
  margin-bottom: 1em;
}

div.printable_card {
  page-break-before: always;
  width: 3.375in;
  margin: 0;
  padding: 0;
  font-family: "Museo Sans";
  font-weight: 300;
  text-align: right;
  font-size: 5.3mm;
}

div.printable_card p {
  margin: 0;
}

div.printable_card p.name {
  font-weight: 500;
}
</style>
<div id="print-notes">
  TODO(nharper): Put notes here with instructions for printing.
</div>
<% @registrations.each do |registration| -%>
<div class="printable_card">
  <p class="name"><%= name_upcase(registration.performer.name).gsub('-', "\u2011") %></p>
  <p><%= section(registration.section).upcase %></p>
  <p><%= registration.chorus_number %></p>
</div>
<%- end -%>
